@model IEnumerable<Project>

<h1 class="text-center mb-5">
    <span> Project Dashboard</span>
</h1>

<table class="table table-hover table-responsive-lg">
    <thead class="table-dark text-white">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Id</td>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>@project.StartDate</td>
                <td>@project.EndDate</td>
                <td class="text-center">
                    <div class="d-flex justify-content-center gap-2">
                        <form action="/project/Delete" method="post" class="d-inline">
                            <input type="hidden" name="id_input" value="@project.Id" />
                            <button class="btn btn-danger btn-sm" title="Delete">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>

                        <form action="/project/updateform" method="post" class="d-inline">
                            <input type="hidden" name="id_input" value="@project.Id" />
                            <button class="btn btn-success btn-sm" title="Update">
                                <i class="bi bi-pencil"></i> Update
                            </button>
                        </form>

                        <form action="/Job/index" method="post" class="d-inline">
                            <input type="hidden" name="id_input" value="@project.Id" />
                            <button type="submit" class="btn btn-primary btn-sm" title="View">
                                <i class="bi bi-eye"></i> View
                            </button>
                        </form>
                    </div>
                </td>

                    
            </tr>
        }
    </tbody>
</table>

<div class="mt-5 text-center">
    <a asp-action="Create" class="btn btn-success btn-lg w-100 shadow-lg">Add New project</a>
</div>