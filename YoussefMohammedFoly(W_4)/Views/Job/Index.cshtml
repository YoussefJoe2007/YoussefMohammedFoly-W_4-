@model IEnumerable<Job>

<div class="container mt-5">
    <h1 class="text-center display-4 text-primary">Job List</h1>

    <table class="table table-striped table-hover text-center mt-4">
        <thead class="table-dark text-white">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Deadline</th>
                <th>TeamMemberId</th>
                <th>ProjectId</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@job.Id</td>
                    <td>@job.Title</td>
                    <td>@job.Description</td>
                    <td>@job.Status</td>
                    <td>@job.Priority</td>
                    <td>@job.Deadline</td>
                    <td>@job.TeamMemberId</td>
                    <td>@job.ProjectId</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                        <form class="d-inline" action="/Job/updateform" method="post">
                            <input type="hidden" name="ID" value="@job.Id" />
                            <button class="btn btn-success btn-sm"   title="Update Status">
                                <i class="bi bi-pencil"></i> Update 
                            </button>
                        </form>

                        <form class="d-inline" action="/Job/Delete" method="post">
                            <input type="hidden" name="ID" value="@job.Id" />
                            <button class="btn btn-danger btn-sm"  title="Delete ">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>





<div class="container mt-5">
    <h1 class="text-center display-4 text-primary">Create Job</h1>

    <div class="text-center mt-4">
        <h3>Add a New JOb</h3>
        <p class="text-muted">Fill in the details below to add a new Job to the system.</p>
    </div>

    <div class="shadow p-4 rounded bg-light">
        <form asp-action="Create" asp-controller="Job" method="post">
            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" id="Title" name="title" class="form-control" placeholder="Enter title" required>
            </div>

            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <input type="text" id="Description" name="description" class="form-control" placeholder="Enter description" required>
            </div>

            <div class="mb-3">
                <label for="Status" class="form-label"> Status</label>
                <input type="text" id="Status" name="Status" class="form-control" placeholder="Enter Status " required>
            </div>   
            <div class="mb-3">
                <label for="Priority" class="form-label"> Priority</label>
                <input type="text" id="Priority" name="Priority" class="form-control" placeholder="Enter Priority " required>
            </div>

            <div class="mb-3">
                <label for="EndDate" class="form-label"> Deadline</label>
                <input type="text" id="Deadline" name="Deadline" class="form-control" placeholder="Enter Deadline" required>
            </div>

            <div class="mb-3">
                <label for="ProjectId" class="form-label">ProjectId</label>
                <input type="text" id="ProjectId" name="ProjectId" class="form-control" placeholder="Enter ProjectId" required>
            </div>

            <input type="hidden" name="departmentID" value="@ViewData["id"]">

            <div class="mb-3">
                <label for="StudentID" class="form-label"> TeamMemberId</label>
                <input type="text" id="TeamMemberId" name="TeamMemberId" class="form-control" placeholder="Enter TeamMemberId" required>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-4 shadow-lg">Add Job</button>
        </form>
    </div>


</div>
